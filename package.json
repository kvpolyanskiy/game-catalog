{
  "name": "typescript-react-boilerplate",
  "version": "1.0.0",
  "main": "index.ts",
  "author": "Konstantin Polyanskiy",
  "license": "MIT",
  "scripts": {
    "css-types-gen": "tcm src --watch",
    "build": "webpack --config webpack-prod.config.js",
    "dev-server": "webpack-dev-server --config webpack-dev.config.js --open",
    "start": "concurrently --kill-others 'yarn:dev-server' 'yarn:css-types-gen'",
    "lint": "concurrently 'npm:lint:*'",
    "lint:scripts": "eslint ./ --ext js,ts,tsx",
    "lint:styles": "stylelint **/src/**/*.css",
    "typecheck": "tsc --noEmit --skipLibCheck --project ./tsconfig.json"
  },
  "devDependencies": {
    "@types/react": "^16.9.49",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^5.3.0",
    "css-loader": "^4.3.0",
    "eslint": "^7.10.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.2",
    "html-webpack-plugin": "^4.5.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "mini-css-extract-plugin": "^0.11.2",
    "prettier": "^2.1.2",
    "style-loader": "^1.2.1",
    "stylelint": "^13.7.2",
    "stylelint-config-css-modules": "^2.2.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-no-browser-hacks": "^1.2.1",
    "stylelint-no-unsupported-browser-features": "^4.0.0",
    "stylelint-no-unused-selectors": "^1.0.31",
    "stylelint-prettier": "^1.1.2",
    "stylelint-selector-no-empty": "^1.0.7",
    "terser-webpack-plugin": "^4.2.2",
    "ts-loader": "^8.0.4",
    "typed-css-modules": "^0.6.4",
    "typescript": "^4.0.3",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  }
}
